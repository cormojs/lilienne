{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "noImplicitAny": false,
    "sourceMap": false,
    "outDir": "./",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "lib": ["es2015", "es2016", "es2017", "dom"]
  },
  "include": ["./lib/**/*"],
  "files": ["./lib/app/app.ts", "./main.ts", "./down.ts"],
  "exclude": ["node_modules"]
}
