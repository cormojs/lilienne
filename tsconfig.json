{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "noImplicitAny": false,
    "sourceMap": false,
    "outDir": "./",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "noEmit": true
  },
  "include": ["./lib/**/*"],
  "files": ["./lib/app/app.ts", "./main.ts", "./down.ts"]
}
