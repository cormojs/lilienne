{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "typeRoots": ["node_modules/@types", "types"],
        "outDir": "./build/",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "./lib/**/*"
    ]
}
